<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Faculty Marks</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Marks for Your Students</h1>

    <% if (message) { %>
        <p><%= message %></p>
    <% } else { %>
        <table border="1">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Subject</th>
                    <th>Marks</th>
                </tr>
            </thead>
            <tbody>
                <% marks.forEach(mark => { %>
                    <tr>
                        <td><%= mark.student_name %></td>
                        <td><%= mark.subject %></td>
                        <td><%= mark.marks %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>

    <a href="/faculty/dashboard">Back to Dashboard</a>
</body>
</html>
